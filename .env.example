# Database Configuration
# Copy this file to .env and fill in your actual database credentials

# PostgreSQL Database URL Format:
# DATABASE_URL="postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE_NAME"

# Example for PostgreSQL:
# DATABASE_URL="postgresql://postgres:your_password@localhost:5432/kingland_internal"

DATABASE_URL="postgresql://YOUR_USERNAME:YOUR_PASSWORD@YOUR_HOST:5432/YOUR_DATABASE_NAME"

# NextAuth Configuration
# Generate a secret key with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# NextAuth URL - URL of your application
NEXTAUTH_URL="http://localhost:3000"
